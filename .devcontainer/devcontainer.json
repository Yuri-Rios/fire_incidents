{
	"name": "PySpark + Airflow DevContainer",
	"build": {
	  "dockerfile": "Dockerfile"
	},
	"customizations": {
	  "vscode": {
		"settings": {
		  "terminal.integrated.shell.linux": "/bin/bash"
		},
		"extensions": [
		  "ms-python.python"
		]
	  }
	},
	"postCreateCommand": "airflow db init",
	"forwardPorts": [8080],
	"remoteUser": "root"
  }
  